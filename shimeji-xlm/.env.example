# Optional deploy credentials (choose ONE approach)
# 1) Seed phrase (12/24 words)
STELLAR_MNEMONIC=

# 2) Secret seed/key (S...)
STELLAR_SECRET_SEED=
# STELLAR_SECRET_KEY=

# Optional identity alias for stellar CLI
STELLAR_IDENTITY_ALIAS=shimeji-deployer

# Optional deploy behavior
FORCE_IDENTITY_REIMPORT=0
MIN_MAINNET_XLM=2

# Optional Trustless Work escrow routing
ENABLE_TRUSTLESS_ESCROW=1
# TRUSTLESS_ESCROW_XLM_ADDRESS=C...
# TRUSTLESS_ESCROW_USDC_ADDRESS=C...
AUTO_DEPLOY_TRUSTLESS_ESCROW_NON_LOCAL=1

# Optional on-chain source publication + verification
ENABLE_ONCHAIN_SOURCE_VERIFICATION=1
REQUIRE_ONCHAIN_SOURCE_VERIFICATION=0
CONTRACT_SOURCE_REPO=github:luloxi/Shimeji-AI-Pets
CONTRACT_SOURCE_COMMIT=
CONTRACT_SOURCE_SUBPATH=shimeji-xlm/soroban

# Optional initial auction auto-creation after each new deploy
AUTO_CREATE_INITIAL_AUCTION=1
INITIAL_AUCTION_MIN_CURRENCY=usdc
INITIAL_AUCTION_MIN_AMOUNT=50
INITIAL_AUCTION_XLM_USDC_RATE=1600000
INITIAL_AUCTION_TOKEN_URI=ipfs://shimeji/default-auction.json

# Optional RPC auth header (for providers that require API keys)
# STELLAR_RPC_HEADERS="X-API-Key: your_rpc_api_key"
