{
  "name": "shimeji-desktop",
  "version": "0.1.0",
  "description": "AI agent orchestrator, for all your online and onchain activities. NFTs unlock customization.",
  "author": "Kathonejo & Lulox",
  "private": true,
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron-store": "^8.2.0"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "dev.shimeji.desktop",
    "productName": "Shimeji Desktop",
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "portable"
      ]
    },
    "portable": {
      "artifactName": "Shimeji-Desktop-Portable-${version}.exe"
    },
    "icon": "icon.png"
  }
}
